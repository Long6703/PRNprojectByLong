<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password</title>
    <style>
        /* CSS chỉ áp dụng cho trang Change Password */
        .change-password-container {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            padding: 20px;
            max-width: 980px;
            margin: 50px auto;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .change-password-container h2 {
                margin-top: 0;
            }

        .change-password-form-group {
            margin-bottom: 20px;
        }

            .change-password-form-group label {
                font-weight: bold;
                display: block;
                margin-bottom: 5px;
            }

            .change-password-form-group input {
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

        .change-password-btn {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .change-password-btn:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    @Html.Partial("~/Views/Navbar.cshtml")
    <div class="change-password-container">
        <h2>Change Password</h2>
        <form action="dochangepass" method="post">
            <div class="change-password-form-group">
                <label for="currentPassword">Current Password:</label>
                <input type="password" id="currentPassword" name="currentPassword" required>
            </div>
            <div class="change-password-form-group">
                <label for="newPassword">New Password:</label>
                <input type="password" id="newPassword" name="newPassword" required>
            </div>
            <div class="change-password-form-group">
                <label for="confirmPassword">Confirm New Password:</label>
                <input type="password" id="confirmPassword" name="confirmPassword" required>
            </div>
            <button type="submit" class="change-password-btn">Change Password</button>
        </form>
    </div>
    @Html.Partial("~/Views/footer.cshtml")
</body>
</html>

