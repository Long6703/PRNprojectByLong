                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800">Admin Name :  + Manage Cate</h1>
                    <form action="addnewcate">
                        <div style="display:flex; gap:20px">
                            <h5 style="color:black"><a href="#">Enter name new category</a></h5>
                            <input type="text" name="newcate" />
                            <button type="submit">Add</button>
                        </div>
                    </form>
                    <table>
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Active</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cate in Model)
                            {
                                <tr>
                                    <td>@cate.CategoryId</td>
                                    <td>@cate.CategoryName</td>
                                    <td>@(cate.IsActive == true ? "YES" : "NO")</td>
                                    <td><a href="editcate?ID=@cate.CategoryId">Edit</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @if (c != null)
                    {
                        <div class="container">
                            <h2>Edit Brand</h2>
                            <form action="/updateCate" method="post">
                                <div class="form-group1">
                                    <label for="CateId">ID:</label>
                                    <input type="text" id="cateId" name="newCate.CategoryId" value="@c.CategoryId" readonly>
                                </div>
                                <div class="form-group2">
                                    <label for="brandName">Name:</label>
                                    <input type="text" id="brandName" name="newCate.CategoryName" value="@c.CategoryName" required>
                                </div>
                                <div class="form-group3">
                                    <input type="radio" id="activeStatus" name="newCate.IsActive" value="true" @(c.IsActive == true ? "checked" : "")>
                                    <label for="activeStatus">Active</label><br>
                                    <input type="radio" id="inactiveStatus" name="newCate.IsActive" value="false" @(c.IsActive == false ? "checked" : "")>
                                    <label for="inactiveStatus">Not Active</label><br>
                                </div>
                                <div class="image-container">
                                    <img src="~/img/@c.CateUrl" alt="Image Description">
                                </div>
                                <button class="button1" type="submit">Save</button>
                            </form>
                        </div>
