                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800">Manage User</h1>

                    <form action="manageuser" id="search-form">
                        <div id="search-container">
                            <input type="text" id="search-input" name="name" placeholder="Search by name..." value="@ViewBag.name">
                        </div>

                        <div style="display:flex; gap:30px">
                            <label><input type="radio" name="role" value="0" checked>All</label>
                            @foreach (var g in ViewBag.Groups)
                            {
                                <label><input type="radio" name="role" value="@g.GroupId" @(ViewBag.role == @g.GroupId ? "checked" : "")>@g.GroupName</label>
                            }
                        </div>
                        <button id="role-search" type="submit">Search</button>
                    </form>
                    <table>
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Display Name</th>
                                <th>Phone Number</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Active</th>
                                <th>Role</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var u in Model)
                            {
                                <tr>
                                    <td>@u.Username</td>
                                    <td>@u.DisplayName</td>
                                    <td>@u.PhoneNumber</td>
                                    <td>@u.Email</td>
                                    <td>
                                        <select>
                                            @foreach (var a in u.Addresses)
                                            {
                                                <option>@a.AddressName</option>
                                            }
                                        </select>
                                    </td>
                                    <td>@(u.IsActive == true ? "YES" : "NO")</td>
                                    <td>
                                        @foreach (var a in u.GroupAccounts)
                                        {
                                            @a.Group.GroupName <br />
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="pagination">
                        @for (int i = 1; i <= ViewBag.totalpage; i++)
                        {
                            <a class="@(i == ViewBag.currentpage ? "active" : "")" href="manageuser?name=@ViewBag.name&role=@ViewBag.role&page=@i">@i</a>
                        }
                    </div>

                </div>
                <!-- /.container-fluid -->

