@{
    @using LongShop3.Models
    @model List<Order>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order History</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
    @Html.Partial("~/Views/Navbar.cshtml")
    <div class="container mt-5">
        <h2 class="mb-4">Order History</h2>
        <table style="margin-bottom:300px" class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#Order ID</th>
                    <th scope="col">Total Price</th>
                    <th scope="col">Order Date</th>
                    <th scope="col">Status</th>
                    <th scope="col">Address Shipping</th>
                </tr>
            </thead>
            <tbody id="orderHistoryBody">
                @foreach(var o in Model)
                {
                    <tr>
                        <td scope="col">@o.Orderid</td>
                        <td scope="col">@o.TotalPrice</td>
                        <td scope="col">@o.OrderDate</td>
                        <td scope="col">@o.StatusOrder.ToUpper()</td>
                        <td scope="col">@o.Address.AddressName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @Html.Partial("~/Views/footer.cshtml")
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="script.js"></script>
</body>
</html>
